<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "Nossa Causa" %></title>
    
    <%= stylesheet_link_tag "all", "bootstrap.min", "protesta" %>
    <%= javascript_include_tag  "all", "bootstrap.min", "jquery-1.10.1.min", "jquery.aw-showcase.min" %>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans|Enriqueta' rel='stylesheet' type='text/css'>
  
    <script type="text/javascript">
      $(document).ready(function() {
        $("#showcase").awShowcase(
        {
          content_width:      700,
          content_height:     375,
          fit_to_parent:      false,
          auto:         true,
          interval:       3000,
          continuous:       false,
          loading:        true,
          arrows:         true,
          buttons:        false,
          btn_numbers:      false,
          keybord_keys:     true,
          pauseonover:      true,
          stoponclick:      false,
          transition:       'hslide', /* hslide/vslide/fade */
          transition_delay:   0,
          transition_speed:   500,
          show_caption:     'onload', /* onload/onhover/show */
          dynamic_height:     false, /* For dynamic height to work in webkit you need to set the width and height of images in the source. Usually works to only set the dimension of the first slide in the showcase. */
          speed_change:     true, /* Set to true to prevent users from swithing more then one slide at once. */
          viewline:       false, /* If set to true content_width, thumbnails, transition and dynamic_height will be disabled. As for dynamic height you need to set the width and height of images in the source. */
        });
      });
    </script>

  </head>


  

  
  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>